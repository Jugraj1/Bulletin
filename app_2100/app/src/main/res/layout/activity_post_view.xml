<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


  <ScrollView
      android:id="@+id/scrollView"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginTop="15dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toTopOf="@+id/activity_postView_ll_add_comment_footer"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <TextView
          android:id="@+id/activity_postView_tv_title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:layout_marginTop="16dp"
          android:layout_marginEnd="16dp"
          android:lineSpacingExtra="4sp"
          android:text="Title"
          android:textColor="#000000"
          android:textSize="22sp"
          android:textStyle="bold" />

      <View
          android:id="@+id/view2"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="8dp"
          android:layout_marginEnd="16dp"
          android:background="#2e2e2e" />

      <TextView
          android:id="@+id/activity_postView_tv_timestamp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:layout_marginTop="8dp"
          android:layout_marginEnd="16dp"
          android:text="22-04-2024"
          android:textSize="12sp" />

      <TextView
          android:id="@+id/activity_postView_tv_author"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:layout_marginTop="8dp"
          android:layout_marginEnd="16dp"
          android:text="Raj Nitinger" />

      <TextView
          android:id="@+id/activity_postView_tv_description"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:layout_marginTop="16dp"
          android:layout_marginEnd="16dp"
          android:lineSpacingExtra="8sp"
          android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Massa sapien faucibus et molestie ac feugiat sed. Posuere sollicitudin aliquam ultrices sagittis. Risus in hendrerit gravida rutrum quisque. Malesuada proin libero nunc consequat interdum varius. Malesuada fames ac turpis egestas sed. Sed ullamcorper morbi tincidunt ornare massa eget. Sed enim ut sem viverra. Ipsum dolor sit amet consectetur adipiscing elit ut aliquam purus. Vel pharetra vel turpis nunc. Vulputate odio ut enim blandit volutpat maecenas volutpat blandit. Quis viverra nibh cras pulvinar mattis nunc sed blandit. Condimentum vitae sapien pellentesque habitant morbi tristique senectus et. Eu feugiat pretium nibh ipsum consequat nisl vel pretium lectus. Maecenas volutpat blandit aliquam etiam. Elementum nibh tellus molestie nunc non blandit massa enim nec. Tellus rutrum tellus pellentesque eu.

Sit amet mauris commodo quis imperdiet. Tortor at auctor urna nunc id. At augue eget arcu dictum varius duis at. Egestas dui id ornare arcu odio ut sem nulla pharetra. Cursus sit amet dictum sit amet justo donec enim. Massa enim nec dui nunc mattis enim. Lobortis feugiat vivamus at augue. In eu mi bibendum neque. Pellentesque nec nam aliquam sem et. Adipiscing elit pellentesque habitant morbi tristique. Arcu dui vivamus arcu felis. Congue eu consequat ac felis. Massa massa ultricies mi quis hendrerit dolor magna. Amet porttitor eget dolor morbi non. Purus semper eget duis at tellus at. Orci a scelerisque purus semper eget duis at tellus. Amet purus gravida quis blandit turpis cursus in. Morbi tristique senectus et netus et malesuada fames. Vitae congue mauris rhoncus aenean vel elit"
          android:textColor="#252525" />

      <TextView
          android:id="@+id/activity_post_view_tv_cmts"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:layout_marginTop="16dp"
          android:layout_marginEnd="16dp"
          android:gravity="center"
          android:lineSpacingExtra="8sp"
          android:text="COMMENTS"
          android:textColor="#000000"
          android:textSize="22sp"
          android:textStyle="bold" />

    </LinearLayout>
  </ScrollView>

<!-- Add comment sticky footer-->
  <LinearLayout
      android:id="@+id/activity_postView_ll_add_comment_footer"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginTop="16dp"
      android:paddingTop="10dp"
      android:layout_marginBottom="16dp"
      android:paddingStart="14dp"
      android:paddingEnd="4dp"
      android:gravity="center_vertical"
      android:background="@drawable/universal_feed_footer_line">

    <ImageView
        android:id="@+id/activity_postView_iv_user"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/default_profile_pic"/>

    <EditText
        android:hint="Add a comment..."
        android:id="@+id/activity_postView_et_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/plaintext_rounded_button_style"
        android:ems="10"
        android:inputType="text"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/activity_postView_btn_addCom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post"
        android:textSize="16sp"
        app:cornerRadius="10dp"
        style="@style/UniversalFeedFooterButtonStyle"/>
  </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
